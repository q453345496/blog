<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xian.blog.dao.ParamDao">

	<resultMap type="Param" id="ParamResult">
		<id property="id" column="id" />
	</resultMap>

	<select id="list" parameterType="Map" resultMap="ParamResult">
		SELECT * FROM t_param
		<where>
			<if test="key != null and key != '' ">
				AND `key` LIKE CONCAT('%', #{key}, '%')
			</if>
			<if test="typeCode != null and typeCode != '' ">
				AND type_code = #{typeCode}
			</if>
		</where>
		ORDER BY `key`
		<if test="start != null and size != null">
			LIMIT #{start}, #{size}
		</if>

	</select>

	<select id="getTotal" parameterType="Map" resultType="Integer">
		SELECT COUNT(1) FROM t_param
		<where>
			<if test="key != null and key != '' ">
				AND `key` LIKE CONCAT('%', #{key}, '%')
			</if>
			<if test="typeCode != null and typeCode != '' ">
				AND type_code = #{typeCode}
			</if>
		</where>
	</select>

	<insert id="save" parameterType="Param" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO t_param (`key`, `value`, type_code, summary) VALUES(#{key}, #{value}, #{typeCode}, #{summary})
	</insert>

	<update id="update" parameterType="Param">
		UPDATE t_param
		<set>
			<if test="key != null and key != '' ">
				`key` = #{key},
			</if>
			<if test="value != null and value != '' ">
				`value` = #{value},
			</if>
			<if test="summary != null and summary != '' ">
				`summary` = #{summary},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<delete id="delete" parameterType="Long">
		DELETE FROM t_param WHERE id = #{id}
	</delete>
</mapper> 