<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xian.blog.dao.JournalCategoryDao">

	<resultMap type="JournalCategory" id="JournalCategoryResult">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="rank" column="rank" />
		<result property="parentId" column="parent_id" />
		<result property="type" column="type" />
	</resultMap>
	<sql id="sql_where">
		<where>
			<if test="name != null and name != '' ">
				AND name LIKE CONCAT('%', #{name}, '%')
			</if>
			<if test="rank != null">
				AND rank = #{rank}
			</if>
			<if test="parentId != null">
				AND parent_id = #{parentId}
			</if>
			<if test="type != null">
				AND type = #{type}
			</if>
		</where>
	</sql>

	<select id="list" parameterType="Map" resultMap="JournalCategoryResult">
		SELECT * FROM t_journal_category
		<include refid="sql_where"></include>
		ORDER BY rank, name
		<if test="start != null and size != null">
			LIMIT #{start}, #{size}
		</if>

	</select>

	<select id="getTotal" parameterType="Map" resultType="Integer">
		SELECT COUNT(1) FROM t_journal_category
		<include refid="sql_where"></include>
	</select>

	<insert id="save" parameterType="JournalCategory" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO t_journal_category (name, parent_id, rank, type) VALUES(#{name}, #{parentId}, #{rank}, #{type})
	</insert>

	<update id="update" parameterType="JournalCategory">
		UPDATE t_journal_category
		<set>
			<if test="name != null and name != '' ">
				name = #{name},
			</if>
			<if test="rank != null">
				rank = #{rank},
			</if>
			<if test="parentId != null">
				parent_id = #{parentId},
			</if>
			<if test="type != null">
				type = #{type},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<delete id="delete" parameterType="Long">
		DELETE FROM t_journal_category WHERE id = #{id}
	</delete>
</mapper> 