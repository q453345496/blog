<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xian.blog.dao.SpecialTopicDao">

	<resultMap type="SpecialTopic" id="SpecialTopicResult">
		<id property="id" column="id" />
	</resultMap>

	<select id="list" parameterType="Map" resultMap="SpecialTopicResult">
		SELECT * FROM t_special_topic
		<where>
			<if test="name != null and name != '' ">
				AND name LIKE CONCAT('%', #{name}, '%')
			</if>
		</where>
		ORDER BY name
		<if test="start != null and size != null">
			LIMIT #{start}, #{size}
		</if>

	</select>

	<select id="getTotal" parameterType="Map" resultType="_int">
		SELECT COUNT(1) FROM t_special_topic
		<where>
			<if test="name != null and name != '' ">
				AND name LIKE CONCAT('%', #{name}, '%')
			</if>
		</where>
	</select>

	<insert id="save" parameterType="SpecialTopic" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO t_special_topic (name, rank, create_time, modify_time) VALUES(#{name}, #{rank}, #{createTime}, #{modifyTime})
	</insert>

	<update id="update" parameterType="SpecialTopic">
		UPDATE t_special_topic
		<set>
			<if test="name != null and name != '' ">
				name = #{name},
			</if>
			<if test="click != null">
				click = #{click},
			</if>
			<if test="relateCount != null">
				relate_count = #{relate_count},
			</if>
			<if test="rank != null">
				rank = #{rank},
			</if>
			<if test="modifyTime != null">
				modify_time = #{modifyTime},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<delete id="delete" parameterType="Long">
		DELETE FROM t_special_topic WHERE id = #{id}
	</delete>
	
	<select id="get" parameterType="Long" resultMap="SpecialTopicResult">
		SELECT * FROM t_special_topic
		WHERE id = #{id}
	</select>
</mapper>